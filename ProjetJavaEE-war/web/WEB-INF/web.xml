<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>personne</servlet-name>
        <servlet-class>servlet.Personnes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Connexion</servlet-name>
        <servlet-class>servlet.Connexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Evenements</servlet-name>
        <servlet-class>servlet.Evenements</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>personne</servlet-name>
        <url-pattern>/personnes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Connexion</servlet-name>
        <url-pattern>/connexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Evenements</servlet-name>
        <url-pattern>/evenements</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
